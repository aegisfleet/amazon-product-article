# Amazon PA-API v5 Configuration
AMAZON_ACCESS_KEY=your_amazon_access_key_here
AMAZON_SECRET_KEY=your_amazon_secret_key_here
AMAZON_PARTNER_TAG=your_amazon_partner_tag_here
AMAZON_REGION=us-east-1

# Jules API Configuration
JULES_API_KEY=your_jules_api_key_here
JULES_BASE_URL=https://api.jules.google.com
JULES_TIMEOUT=30000

# GitHub Configuration
GITHUB_TOKEN=your_github_token_here
GITHUB_REPOSITORY=your_username/your_repository
GITHUB_BRANCH=main

# System Configuration
LOG_LEVEL=info
RETRY_ATTEMPTS=3
RETRY_DELAY=1000
MAX_CONCURRENT_REQUESTS=5

# Product Search Configuration
PRODUCT_CATEGORIES=Electronics,Home,Sports,Books,Toys
MAX_RESULTS_PER_CATEGORY=10
SEARCH_KEYWORDS=best,top,review,recommended

# Article Generation Configuration
ARTICLE_TEMPLATE_PATH=./templates
ARTICLE_OUTPUT_PATH=./articles
MIN_WORD_COUNT=2000
INCLUDE_IMAGES=true