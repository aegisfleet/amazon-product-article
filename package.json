{
  "name": "amazon-product-research-system",
  "version": "1.0.0",
  "description": "Amazon PA-API v5とGoogle Julesを活用した商品調査記事の自動生成・公開システム",
  "main": "dist/index.js",
  "scripts": {
    "prebuild:hugo": "mkdir -p static/data && cp data/categorygroups.json static/data/",
    "build": "tsc",
    "dev": "ts-node src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "clean": "rimraf dist",
    "search:products": "ts-node src/scripts/product-search-cli.ts",
    "investigate": "ts-node src/scripts/jules-investigation-cli.ts",
    "generate:articles": "ts-node src/scripts/article-generation-cli.ts",
    "merge:pr": "ts-node src/scripts/pr-merge-cli.ts",
    "organize:categories": "ts-node src/scripts/organize-categories-cli.ts"
  },
  "keywords": [
    "amazon",
    "product-research",
    "jules-api",
    "github-actions",
    "affiliate"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^25.0.3",
    "@typescript-eslint/eslint-plugin": "^8.50.1",
    "@typescript-eslint/parser": "^8.50.1",
    "eslint": "^9.39.2",
    "fast-check": "^4.5.2",
    "globals": "^17.0.0",
    "jest": "^30.2.0",
    "paapi5-nodejs-sdk": "^1.1.0",
    "rimraf": "^6.1.2",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.51.0"
  },
  "dependencies": {
    "@octokit/rest": "^22.0.1",
    "axios": "^1.6.0",
    "dotenv": "^17.2.3",
    "fuse.js": "^7.1.0"
  },
  "overrides": {
    "crypto-js": "^4.2.0"
  }
}